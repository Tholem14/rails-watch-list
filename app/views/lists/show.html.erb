<h1><%= @list.name %></h1>

<h2>Películas en esta lista:</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
      <%= link_to "Eliminar", bookmark_path(bookmark), method: :delete, data: { confirm: "¿Seguro que quieres eliminar este bookmark?" }, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>

<%= link_to "Agregar película", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Volver a listas", lists_path, class: "btn btn-secondary" %>
